<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FlashLightApp2018"
             x:Class="FlashLightApp2018.MainPage">

    <StackLayout BackgroundColor="Gray">
        <!-- Place new controls here -->
        <Button Text="On" x:Name="OnBtn" Clicked="OnBtn_Clicked" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" BorderColor="LightGray" BackgroundColor="Gray" BorderWidth="2" FontAttributes="Bold" BorderRadius="4"/>
        <Button Text="Off" x:Name="OffBtn" Clicked="OffBtn_Clicked" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" BorderColor="LightGray" BackgroundColor="Gray" BorderWidth="2" FontAttributes="Bold" BorderRadius="4"/>
        <Button Text="Morse" x:Name="MorseBtn" Clicked="MorseBtn_Clicked" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" BorderColor="LightGray" BackgroundColor="Gray" BorderWidth="2" FontAttributes="Bold" BorderRadius="4"/>
        <!--<Button Text="Light Strength" x:Name="LightStr" Clicked="LightStr_Clicked"/>-->
    </StackLayout>
  <!--test-->
</ContentPage>
